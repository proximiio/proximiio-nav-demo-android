<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <rotate android:pivotX="120%" android:pivotY="20%" android:fromDegrees="45">
            <shape android:shape="rectangle">
                <gradient
                    android:type="radial"
                    android:startColor="#00000000"
                    android:centerColor="#03A9F4"
                    android:endColor="#0003A9F4"
                    android:gradientRadius="78dp"
                    android:centerX="100%"
                    android:centerY="100%"
                    />
                <size android:height="45dp" android:width="45dp"/>
            </shape>
        </rotate>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1.5dp" android:color="#00000000"/>
            <size android:height="150dp" android:width="150dp"/>
            <padding  android:top="60dp" android:bottom="60dp" android:right="60dp" android:left="60dp"/>
        </shape>
    </item>


    <item>
        <shape android:shape="oval">
            <!--            <size android:height="16dp" android:width="16dp"/>-->
            <stroke
                android:width="1.5dp"
                android:color="#03A9F4"/>
            <padding  android:top="1.5dp" android:bottom="1.5dp" android:right="1.5dp" android:left="1.5dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <!--            <size android:height="16dp" android:width="16dp"/>-->
            <!--            <padding android:top="45dp" android:bottom="45dp" android:right="45dp" android:left="45dp"/>-->
            <stroke
                android:width="3dp"
                android:color="#FFFFFF"/>
            <padding  android:top="3dp" android:bottom="3dp" android:right="3dp" android:left="3dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <!--            <size android:height="16dp" android:width="16dp"/>-->
            <solid android:color="#03A9F4"/>
            <padding  android:top="3dp" android:bottom="3dp" android:right="3dp" android:left="3dp"/>
        </shape>
    </item>

</layer-list>
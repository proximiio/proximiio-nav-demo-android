<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <rotate android:pivotX="120%" android:pivotY="20%" android:fromDegrees="45">
            <shape android:shape="rectangle">
                <gradient
                    android:type="radial"
                    android:startColor="#00000000"
                    android:centerColor="#03A9F4"
                    android:endColor="#0003A9F4"
                    android:gradientRadius="78dp"
                    android:centerX="100%"
                    android:centerY="100%"
                    />
                <size android:height="45dp" android:width="45dp"/>
            </shape>
        </rotate>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#00000000"/>
            <size android:height="150dp" android:width="150dp"/>
        </shape>
    </item>

</layer-list>